extends ../base.pug

block variables
  - var slug = "gallery"

block body 
  div(class="max-w-screen-xl mx-auto w-full relative px-5 xl:px-0")

    - var title = 'Gallery'
    include ../shared/headline

  div(class="mt-9 md:mt-40 pb-20 md:pb-40 max-w-screen-xl mx-auto w-full relative px-5 xl:px-0")
    div(class="flex flex-col")
      div(class="gallery flex flex-wrap justify-between")
        div(class="w-full sm:w-1/2 pb-5 sm:pb-0 sm:px-2 sm:self-start")
          div(class="aspect-w-4 aspect-h-3")
            img(src="/assets/foto-1.jpg" alt="Foto 1" class="object-center object-cover")
        div(class="w-full sm:w-1/2 pb-5 sm:pb-0 sm:px-2 sm:self-start")
          div(class="aspect-w-4 aspect-h-3")
            img(src="/assets/foto-2.jpg" alt="Foto 1" class="object-center object-cover")


        div(class="w-full pb-5 sm:pb-0 sm:px-2 sm:self-start")
          div(class="aspect-w-16 aspect-h-9")
            img(src="/assets/foto-1.jpg" alt="Foto 1" class="object-center object-cover")


  include ../shared/footer
