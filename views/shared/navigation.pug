block variables 

header
  div(class="pt-12 sm:pt-24 max-w-screen-xl relative mx-auto w-full px-8 xl:px-0")
    div(class="hidden lg:block absolute -top-8 -right-16 md:-top-4 lg:top-0 md:-right-10 lg:right-0 px-8 xl:px-0 w-72 lg:w-80 xl:w-96")
      img(src="/assets/lines.svg" alt="Lines")
    div(class="transform -translate-x-full -rotate-90 origin-right absolute text-2xl sm:text-3xl flex items-center")
        span(class="w-8 h-0.5 bg-black block mr-4")
        p #{slug}
    div(class="text-lg lg:text-xl uppercase ml-16 md:ml-24 lg:ml-32")
      ul(class="nav-items flex flex-col items-end justify-end sm:justify-start sm:flex-row text-gray-500")

        - var nav = ['projects', 'about', 'gallery', 'recommended']

        li(class="hover:text-black transition-colors")
          a(href="/") home
        each item in nav
          li(class="hover:text-black transition-colors")
            a(href=`/${item}`) #{item}

